{
  "name": "@sunlit-ui/workspace",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm -C packages/play dev",
    "story": "pnpm --filter @sunlit-ui/play storybook",
    "test": "run-s test-utils test-comp",
    "docs:dev": "pnpm --filter @sunlit-ui/docs dev",
    "docs:build": "pnpm --filter @sunlit-ui/docs build",
    "docs:preview": "pnpm --filter @sunlit-ui/docs preview",
    "test-comp": "cross-env NODE_ENV=test pnpm --filter @sunlit-ui/components test:run",
    "test-utils": "cross-env NODE_ENV=test pnpm --filter @sunlit-ui/utils test:run",
    "test:ui": "cross-env NODE_ENV=test pnpm --filter @sunlit-ui/components test:ui",
    "build": "cross-env NODE_ENV=production pnpm --filter sunlit-ui build",
    "build:dev": "cross-env NODE_ENV=development pnpm --filter sunlit-ui build:watch"
  },
  "keywords": [
    "Vue3",
    "typescript"
  ],
  "author": "nuanyang",
  "license": "ISC",
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.2",
    "@fortawesome/free-solid-svg-icons": "^6.5.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@types/lodash-es": "4.17.12",
    "@types/node": "20.14.9",
    "@types/shelljs": "^0.8.15",
    "@vitejs/plugin-vue": "5.0.5",
    "@vitejs/plugin-vue-jsx": "4.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "0.5.1",
    "cross-env": "^7.0.3",
    "jsdom": "^24.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-color-mix": "1.1.0",
    "postcss-each": "1.1.0",
    "postcss-each-variables": "0.3.0",
    "postcss-for": "2.1.1",
    "postcss-nested": "6.0.1",
    "release-it": "^17.4.1",
    "shelljs": "^0.8.5",
    "typescript": "5.5.3",
    "vite": "5.3.3",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "1.6.0",
    "vue-tsc": "2.0.24"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@sunlit-ui/hooks": "workspace:*",
    "@sunlit-ui/theme": "workspace:*",
    "@sunlit-ui/utils": "workspace:*",
    "async-validator": "^4.2.5",
    "lodash-es": "4.17.21",
    "sunlit-ui": "workspace:*",
    "vue": "3.4.29"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "18.20.1"
  }
}
